<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean id="movieService" name="movieService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.mirus.movieland.service.MovieService"/>
    </bean>

    <bean id="genreService" name="genreService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.mirus.movieland.service.GenreService"/>
    </bean>
</beans>